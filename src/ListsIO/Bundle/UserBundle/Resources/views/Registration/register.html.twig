{# Sets up the situation around the register form #}

{% extends "FOSUserBundle::layout.html.twig" %}

{% block logo %}
<div class="home-logo">
	<img class="svg-img lists-bg" src="{{ asset('assets/images/lists.svg') }}"><br>
	<h3 class="title">Lists.io</h3>
</div>
{% endblock %}

{% block fos_user_content %}
<div class="container">
	<div class="home-header">
		<h1>These are a few of your favorite things.</h1>
	</div>

	<div class="container" id="form">
		<div class="row">
			<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 login-wrapper register">
				{% include "FOSUserBundle:Registration:register_content.html.twig" %}
				<div class="tos">By registering you agree to our<br> <a href="/tos">Privacy Policy and Terms of Use</a></div>
			</div>
		</div>
	</div>
</div>
{% endblock fos_user_content %}
{% block footer %}{% endblock %}