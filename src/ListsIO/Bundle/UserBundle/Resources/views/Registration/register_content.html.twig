{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_widget(form) }}
    <div>
        <br />
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
<hr>
<a class="button register-social twitter" href="{{ path('hwi_oauth_service_redirect', {'service': 'twitter' }) }}" alt="Sign in with Twitter"><span class="icon-twitter"></span> Login with Twitter</a>
<a class="button register-social facebook" href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" alt="Sign in with Facebook"><span class="icon-facebook"></span>  Login with Facebook</a>