{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
 	
    {{ form_row(form.email, {'label_attr': {'class': 'sr-only'}, 'attr' : {'placeholder': 'email address'} }) }}
    {{ form_row(form.username, {'label_attr': {'class': 'sr-only'}, 'attr': {'placeholder': 'username'}}) }}
    {{ form_row(form.plainPassword.first, {'label_attr': {'class': 'sr-only'}, 'attr': {'placeholder': 'password'}}) }}
    {{ form_row(form.plainPassword.second, {'label_attr': {'class': 'sr-only'}, 'attr': {'placeholder': 'confirm password'}}) }}
    
    <div>
    	<input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
    
</form>

